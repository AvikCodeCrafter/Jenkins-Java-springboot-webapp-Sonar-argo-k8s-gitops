@Library('Shared') _

pipeline {
    agent any

    parameters {
        string(name: 'DOCKER_TAG', defaultValue: '', description: 'Docker Tag (Optional)')
    }

    stages {

        stage("Workspace Cleanup") {
            steps {
                cleanWs()
            }
        }

        stage("Checkout Code") {
            steps {
                git branch: 'main',
                    url: 'https://github.com/AvikCodeCrafter/Jenkins-Java-springboot-webapp-Sonar-argo-k8s-gitops.git'
            }
        }

        stage("Build Application") {
            steps {
                sh 'mvn clean package'
            }
        }

        stage("Docker Build & Push") {
            steps {
                script {
                    // Set tag globally
                    env.TAG = params.DOCKER_TAG?.trim() ? params.DOCKER_TAG : "${BUILD_NUMBER}"

                    docker_build("java-web-app", env.TAG, "thatgeekcontainer")
                    docker_push("java-web-app", env.TAG, "thatgeekcontainer")
                }
            }
        }

        stage("Manual Approval for Production") {
            steps {
                timeout(time: 20, unit: 'MINUTES') {
                    input message: "Deploy version ${env.TAG} to PRODUCTION?",
                          ok: "Approve & Deploy"
                }
            }
        }

        stage("Deploy to Production (GitOps Update)") {
            steps {
                withCredentials([usernamePassword(
                    credentialsId: 'git-jenkins',
                    usernameVariable: 'GIT_USER',
                    passwordVariable: 'GIT_PASS'
                )]) {

                    sh """
                        git config user.email "avikbanerjee1992@gmail.com"
                        git config user.name "Avik Banerjee"

                        sed -i "s/replaceImageTag/${env.TAG}/g" GitOps/deployment.yml

                        git add GitOps/deployment.yml
                        git commit -m "PROD: Deploy version ${env.TAG}"
                        git push https://${GIT_USER}:${GIT_PASS}@github.com/AvikCodeCrafter/Jenkins-Java-springboot-webapp-Sonar-argo-k8s-gitops.git HEAD:main
                    """
                }
            }
        }
    }

    post {
        success {
            echo "✅ Production deployment completed successfully"
        }
        failure {
            echo "❌ Production deployment failed"
        }
    }
}
