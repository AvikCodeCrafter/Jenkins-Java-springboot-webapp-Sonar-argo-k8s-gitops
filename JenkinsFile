@Library('Shared') _

pipeline {
    agent any

    parameters {
        string(name: 'DOCKER_TAG', defaultValue: '', description: 'Docker Tag')
    }

    stages {

        stage("Workspace Cleanup") {
            steps {
                cleanWs()
            }
        }

        stage('Git: Code Checkout') {
            steps {
                git branch: 'main',
                url: 'https://github.com/AvikCodeCrafter/Jenkins-Java-springboot-webapp-Sonar-argo-k8s-gitops.git'
            }
        }

        stage('Build and Test') {
            steps {
                sh 'mvn clean package'
            }
        }

        stage("Docker: Build & Push") {
            steps {
                script {
                    // Calculate tag ONCE
                    tag = params.DOCKER_TAG?.trim() ? params.DOCKER_TAG : "${BUILD_NUMBER}"

                    docker_build("java-web-app", tag, "thatgeekcontainer")
                    docker_push("java-web-app", tag, "thatgeekcontainer")
                }
            }
        }

        stage('Update Deployment File') {
            steps {
                script {
                    tag = params.DOCKER_TAG?.trim() ? params.DOCKER_TAG : "${BUILD_NUMBER}"
                }

                withCredentials([string(credentialsId: 'github', variable: 'GITHUB_TOKEN')]) {
                    sh """
                        git config user.email "avikbanerjee1992Z@gmail.com"
                        git config user.name "Avik Banerjee"

                        sed -i "s/replaceImageTag/${tag}/g" GitOps/deployment.yml

                        git add GitOps/deployment.yml
                        git commit -m "Update deployment image to version ${tag}"
                        git push https://${GITHUB_TOKEN}@github.com/AvikCodeCrafter/Jenkins-Java-springboot-webapp-Sonar-argo-k8s-gitops.git HEAD:main
                    """
                }
            }
        }
    }

    post {
        success {
            echo "✅ Pipeline completed successfully"
        }
        failure {
            echo "❌ Pipeline failed"
        }
    }
}
