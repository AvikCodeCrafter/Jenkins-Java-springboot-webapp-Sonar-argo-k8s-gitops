@Library('Shared') _

pipeline {
    agent any

    parameters {
        string(name: 'DOCKER_TAG', defaultValue: '', description: 'Docker Tag')
    }

    stages {

        stage("Checkout") {
            steps {
                cleanWs()
                git branch: 'main',
                    url: 'https://github.com/AvikCodeCrafter/Jenkins-Java-springboot-webapp-Sonar-argo-k8s-gitops.git'
            }
        }

        stage("Build") {
            steps {
                sh 'mvn clean package'
            }
        }

        stage("Docker Build & Push") {
            steps {
                script {
                    env.TAG = params.DOCKER_TAG?.trim() ? params.DOCKER_TAG : "${BUILD_NUMBER}"
                    docker_build("java-web-app", env.TAG, "thatgeekcontainer")
                    docker_push("java-web-app", env.TAG, "thatgeekcontainer")
                }
            }
        }

        stage("Deploy to Dev") {
            steps {
                echo "Deploying ${env.TAG} to DEV environment"
                sh """
                sed -i "s/replaceImageTag/${env.TAG}/g" GitOps/dev/deployment.yml
                """
            }
        }

        stage("Deploy to Stage") {
            steps {
                echo "Deploying ${env.TAG} to STAGE environment"
                sh """
                sed -i "s/replaceImageTag/${env.TAG}/g" GitOps/stage/deployment.yml
                """
            }
        }

        stage("Manual Approval for Production") {
            steps {
                timeout(time: 15, unit: 'MINUTES') {
                    input message: "Deploy version ${env.TAG} to PRODUCTION?",
                          ok: "Approve Production Deploy"
                }
            }
        }

        stage("Deploy to Production") {
            steps {
                echo "Deploying ${env.TAG} to PROD environment"
                sh """
                sed -i "s/replaceImageTag/${env.TAG}/g" GitOps/prod/deployment.yml
                """
            }
        }
    }

    post {
        success {
            echo "✅ Production-grade pipeline completed"
        }
        failure {
            echo "❌ Deployment failed"
        }
    }
}
